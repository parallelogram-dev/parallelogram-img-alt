{
    "name": "parallelogram/imgalt",
    "description": "A CraftCMS plugin to allow automated alt tag generation for uploaded images, using OpenAI",
    "type": "craft-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "Parallelogram",
            "homepage": "https://parallelogram.com.au"
        }
    ],
    "support": {
        "email": "support@parallelogram.com.au",
        "issues": "https://github.com/parallelogram-dev/img-alt/issues?state=open",
        "source": "https://github.com/parallelogram-dev/img-alt",
        "docs": "https://github.com/parallelogram-dev/img-alt"
    },
    "require": {
        "php": "^8.2",
        "craftcms/cms": "^4.0 || ^5.0",
        "ext-fileinfo": "*"
    },
    "autoload": {
        "psr-4": {
            "parallelogram\\imgalt\\": "src/"
        }
    },
    "extra": {
        "name": "Img Alt",
        "handle": "imgalt",
        "class": "parallelogram\\imgalt\\Plugin",
        "schemaVersion": "1.0.0",
        "changelogUrl": "https://github.com/parallelogram-dev/imgalt/releases",
        "documentationUrl": "https://github.com/parallelogram-dev/imgalt#readme",
        "developer": "Parallelogram",
        "developerUrl": "https://parallelogram.com.au"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
